{
  "name": "glimr-sdk",
  "version": "3.2.1",
  "description": "JavaScript SDK for glimr.io",
  "homepage": "https://glimr.io",
  "main": "src/glimr.js",
  "keywords": [
    "glimr",
    "location",
    "ad-server",
    "tags"
  ],
  "devDependencies": {
    "express": "^4.13.4",
    "jshint": "latest",
    "testem": "^1.3.0",
    "uglify-js": "latest"
  },
  "scripts": {
    "lint": "$(npm bin)/jshint --config .jshintrc src/**",
    "prebuild:js": "npm run lint",
    "build:js": "$(npm bin)/uglifyjs --compress --mangle --reserved=Glimr src/glimr.js > dist/glimr.min.js",
    "build": "npm run build:js",
    "test": "node spec/cli.js",
    "testrunner": "node spec/cli.js runner"
  }
}
