{
  "framework": "jasmine",
  "src_files": [
    "spec/glimr.js",
    "spec/**/*.js"
  ],
  "src_files_ignore": [
    "spec/server.js",
    "spec/cli.js"
  ],
  "disable_watching": true,
  "launch_in_ci": [
    "PhantomJS"
  ],
  "launch_in_dev": [
    "PhantomJS"
  ],
  "before_tests": "npm run spec-build",
  "on_exit": "rm spec/glimr.js"
}
